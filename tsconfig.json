{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022", /* Te recomiendo actualizarlo a una versión más moderna como es2022 */

    /* Modules */
    "module": "es2022",
    "rootDir": "./src",  /* <--- AÑADE ESTA LÍNEA */
    "moduleResolution": "bundler",

    /* Emit */
    "outDir": "./dist",  /* <--- DESCOMENTA Y ESTABLECE ESTA LÍNEA */

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}